---
import '../styles/theme.css';
import '../styles/globals.css';

const API_BASE_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:8080';
const LOCATION_ID = import.meta.env.PUBLIC_LOCATION_ID || 'main';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Kiosco de turnos - Sistema de Turnos PRO" />
    <title>Kiosco de Turnos</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 flex items-center justify-center p-4">
    <div id="kiosk-app" class="w-full max-w-2xl">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-2 drop-shadow-lg">
          Sistema de Turnos
        </h1>
        <p class="text-white/90 text-lg">Ingrese su DNI para obtener su ticket</p>
      </div>

      <!-- Main Card -->
      <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-12">
        <!-- Input Section -->
        <div id="input-section" class="space-y-6">
          <div>
            <label for="dni-input" class="block text-gray-700 font-semibold mb-3 text-lg">
              Número de DNI
            </label>
            <input
              type="text"
              id="dni-input"
              placeholder="Ingrese su DNI (solo números)"
              class="w-full px-6 py-4 text-2xl text-center border-2 border-gray-300 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition-all"
              maxlength="20"
              autocomplete="off"
            />
            <p class="text-sm text-gray-500 mt-2 text-center">
              Solo ingrese números, sin puntos ni guiones
            </p>
          </div>

          <button
            id="submit-btn"
            class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold py-5 rounded-xl text-xl hover:from-indigo-700 hover:to-purple-700 transform hover:scale-105 transition-all shadow-lg disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
          >
            <span id="btn-text">Confirmar</span>
            <span id="btn-loading" class="hidden">Procesando...</span>
          </button>
        </div>

        <!-- Ticket Display Section -->
        <div id="ticket-section" class="hidden space-y-6">
          <div class="text-center">
            <div class="inline-block bg-green-100 text-green-800 px-4 py-2 rounded-full mb-4">
              <i class="text-2xl">✓</i> Ticket generado
            </div>
            <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl p-8 border-2 border-indigo-200">
              <div class="text-gray-600 mb-2">Su número de ticket es:</div>
              <div id="ticket-code" class="text-6xl font-bold text-indigo-600 mb-4"></div>
              <div id="ticket-type" class="text-xl text-gray-700 mb-2"></div>
              <div class="text-sm text-gray-500">
                Por favor, espere su turno. Será llamado cuando corresponda.
              </div>
            </div>
          </div>

          <button
            id="new-ticket-btn"
            class="w-full bg-gray-200 text-gray-700 font-semibold py-4 rounded-xl hover:bg-gray-300 transition-all"
          >
            Generar nuevo ticket
          </button>
        </div>

        <!-- Error Message -->
        <div id="error-message" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-xl text-red-700 text-center"></div>
      </div>

      <!-- Footer -->
      <div class="text-center mt-6 text-white/80 text-sm">
        <p>Si ya tenía un turno programado para hoy, se registró como Turno</p>
      </div>
    </div>

    <script define:vars={{ apiBaseUrl: API_BASE_URL, locationId: LOCATION_ID }}>

      const dniInput = document.getElementById('dni-input');
      const submitBtn = document.getElementById('submit-btn');
      const btnText = document.getElementById('btn-text');
      const btnLoading = document.getElementById('btn-loading');
      const inputSection = document.getElementById('input-section');
      const ticketSection = document.getElementById('ticket-section');
      const ticketCode = document.getElementById('ticket-code');
      const ticketType = document.getElementById('ticket-type');
      const newTicketBtn = document.getElementById('new-ticket-btn');
      const errorMessage = document.getElementById('error-message');

      // Solo permitir números en el input
      dniInput.addEventListener('input', (e) => {
        const target = e.target;
        if (target && target instanceof HTMLInputElement) {
          const value = target.value;
          target.value = value.replace(/\D/g, '');
        }
      });

      // Enter key para enviar
      dniInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          submitBtn.click();
        }
      });

      // Enviar formulario
      submitBtn.addEventListener('click', async () => {
        const dni = dniInput.value.trim();

        if (!dni || dni.length < 7) {
          showError('Por favor, ingrese un DNI válido (mínimo 7 dígitos)');
          return;
        }

        setLoading(true);
        hideError();

        try {
          const response = await fetch(`${apiBaseUrl}/queue/kiosk/ticket`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              dni,
              locationId: locationId,
            }),
          });

          const data = await response.json();

          if (!response.ok) {
            throw new Error(data.error?.message || 'Error al generar el ticket');
          }

          // Mostrar ticket
          ticketCode.textContent = data.data.code;
          ticketType.textContent = data.data.type === 'T' 
            ? 'Turno programado' 
            : 'Consulta sin turno';
          
          inputSection.classList.add('hidden');
          ticketSection.classList.remove('hidden');
          
          // Focus en el input para siguiente ticket
          dniInput.value = '';
        } catch (error) {
          const errorMsg = error instanceof Error ? error.message : 'Error al generar el ticket. Por favor, intente nuevamente.';
          showError(errorMsg);
        } finally {
          setLoading(false);
        }
      });

      // Nuevo ticket
      newTicketBtn.addEventListener('click', () => {
        inputSection.classList.remove('hidden');
        ticketSection.classList.add('hidden');
        hideError();
        dniInput.focus();
      });

      function setLoading(loading) {
        submitBtn.disabled = loading;
        if (loading) {
          btnText.classList.add('hidden');
          btnLoading.classList.remove('hidden');
        } else {
          btnText.classList.remove('hidden');
          btnLoading.classList.add('hidden');
        }
      }

      function showError(message) {
        errorMessage.textContent = message;
        errorMessage.classList.remove('hidden');
      }

      function hideError() {
        errorMessage.classList.add('hidden');
      }

      // Focus inicial en el input
      dniInput.focus();
    </script>
  </body>
</html>
